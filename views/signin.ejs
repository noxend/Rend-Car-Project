<% include layout/header.ejs %>
<% include layout/navbar.ejs %>


<div class="container my-container">
  <div class="row">
    <div class="shadow-sm col-lg-6 offset-md-3 login-panel-style">
      <div class="body-p">
        <form method="POST" id="form">
          <h1 class="h3 mb-3 font-weight-normal">Реєстрація</h1>
          <div class="alert" role="alert" id="alert_message" class="alert"></div>
          <div class="form-group">
            <input name="userName" type="text" class="form-control" required id="userNameSignIn" aria-describedby="emailHelp" placeholder="Логін">
          </div>
          <div class="form-group">
            <input name="pass" type="password" class="form-control" required id="passNameSignIn" placeholder="Пароль">
          </div>
          <div class="form-group">
            <input name="confirmPass" type="password" class="form-control" required id="confirmPassNameSignIn" placeholder="Повторіть пароль">
          </div>
          <button type="submit" id="btnSignIn" class="btn btn-red btn-lg btn-block">Зареєструватися</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/javascript/reg.js"></script>

